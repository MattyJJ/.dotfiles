set $mod Mod4
set $term kitty --title "Kitty" 
set $menu rofi -show drun -display-drun ">"

# AUTO START
exec swaybg -i ~/personal/wallpapers/joyboy.png -m fill
exec mako

exec_always wl-paste -t text --watch cliphist store
exec_always wl-paste -p --watch cliphist store

bar {
    swaybar_command waybar
}


# Keybinds

bindsym $mod+d exec rofi $menu 
bindsym $mod+Return exec $term

bindsym $mod+f fullscreen toggle

bindsym $mod+e exec swaylock -f -c 24283B  
bindsym $mod+Shift+e exec exec swaymsg exit

bindsym $mod+Shift+q kill

bindsym $mod+Shift+s exec grim -g "$(slurp)" - | swappy -f -
bindsym $mod+c exec cliphist list | rofi -dmenu | cliphist decode | wl-copy


# Media Keys

bindsym XF86AudioLowerVolume exec volumectl down
bindsym XF86AudioRaiseVolume exec volumectl up
bindsym XF86AudioMute exec volumectl toggle


bindsym XF86MonBrightnessUp exec lightctl increase 5%
bindsym XF86MonBrightnessDown exec lightctl decrease 5%

bindsym Mod1+XF86PickupPhone exec playerctl --player=ncspot next || notify-send "ncspot isn't running"
bindsym Control+Mod1+XF86HangupPhone exec playerctl --player=ncspot play-pause || notify-send "ncspot isn't running"


# MORE KEYBINDS

bindsym $mod+h split h
bindsym $mod+v split v

# Move around windows
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# Move Windows
mode "move" {
    bindsym 1 move container to workspace number 1
    bindsym 2 move container to workspace number 2
    bindsym 3 move container to workspace number 3
    bindsym 4 move container to workspace number 4
    bindsym 5 move container to workspace number 5
    bindsym 6 move container to workspace number 6
    bindsym 7 move container to workspace number 7
    bindsym 8 move container to workspace number 8
    bindsym 9 move container to workspace number 9
    bindsym 0 move container to workspace number 10
    bindsym Escape mode "default"
}
bindsym $mod+m mode "move"

# Resize
mode "resize" {
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Style

gaps inner 5
gaps outer 0

default_border none
default_floating_border none

# Workspace

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

